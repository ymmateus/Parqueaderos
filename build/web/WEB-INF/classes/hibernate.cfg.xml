<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/parkiingcars</property>
    <property name="hibernate.connection.username">root</property>
    <mapping resource="Mapeos/Promociones.hbm.xml"/>
    <mapping resource="Mapeos/Parqueo.hbm.xml"/>
    <mapping resource="Mapeos/Tarifas.hbm.xml"/>
    <mapping resource="Mapeos/Vehiculo.hbm.xml"/>
    <mapping resource="Mapeos/Servicio.hbm.xml"/>
    <mapping resource="Mapeos/Ticket.hbm.xml"/>
    <mapping resource="Mapeos/Espacioparqueo.hbm.xml"/>
    <mapping resource="Mapeos/Usuario.hbm.xml"/>
    <mapping resource="Mapeos/Cliente.hbm.xml"/>
    <mapping resource="Mapeos/Turno.hbm.xml"/>
    <mapping resource="Mapeos/Parqueaderos.hbm.xml"/>
    <mapping resource="Mapeos/Serviciosticket.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
